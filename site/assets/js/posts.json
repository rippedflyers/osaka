---
layout: none
---

[
  {%- for post in site.posts -%}
    {%- if post.author %}
      {%- assign author_page = site.authors | where: "short_name", post.author | first %}
    {%- else %}
      {%- assign author_page = nil %}
    {%- endif %}
    {
      "author" : {{ post.author | jsonify | strip_html}},
      {% if author_page -%}
      "author_name" : "{{ author_page.name }}",
      {% elsif post.author_name != nil -%}
      "author_name" : {{ post.author_name | jsonify | strip_html }},
      {% else -%}
      "author_name" : {{ post.author | jsonify | strip_html }},
      {% endif -%}
      "tags"     : "{{ post.tags | join: ', ' }}",
      "title"    : {{ post.title | jsonify | strip_html }},
      "excerpt"  : {{ post.excerpt | jsonify | strip_html }},
      "url"      : "{{ post.url }}",
      "source"   : {{ post.source | jsonify | strip_html}},
      "date"     : "{{ post.date | date: "%b %-d, %Y" }}",
      "content"  : {{ post.content | jsonify | strip_html }},
      "image"    : {{ post.image | jsonify | strip_html }}
    } {% unless forloop.last %},{% endunless %}
  {%- endfor -%}
]